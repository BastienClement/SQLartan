<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane fx:id="attachedPane" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sqlartan.view.attached.AttachedChooserController">
   <children>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="170.0" prefWidth="452.0">
         <children>
            <HBox alignment="CENTER" prefHeight="53.0" prefWidth="600.0">
               <children>
                  <Label text="Database Name:" />
                  <TextField fx:id="dbName" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="63.0" prefWidth="600.0">
               <children>
                  <Label text="Path:" />
                  <TextField fx:id="path" />
                  <Button fx:id="browse" mnemonicParsing="false" onAction="#browse" text="Browse">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                  <Button fx:id="ok" mnemonicParsing="false" onAction="#validate" text="Attached" />
                <Button fx:id="cancel" mnemonicParsing="false" onAction="#close" text="Cancel" />
              </buttons>
            </ButtonBar>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </children>
</Pane>
